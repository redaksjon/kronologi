{
  "name": "@redaksjon/kronologi",
  "version": "0.0.13-dev.0",
  "description": "Intelligent monthly summary generation from activity and context",
  "main": "dist/main.js",
  "type": "module",
  "bin": {
    "kronologi": "./dist/main.js",
    "kronologi-validate": "./dist/validate-job.js",
    "kronologi-init": "./dist/init-job.js",
    "kronologi-mcp": "./dist/mcp/server.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/redaksjon/kronologi.git"
  },
  "scripts": {
    "build": "npm run lint && tsc --noEmit && vite build && npm run postbuild",
    "postbuild": "chmod +x dist/main.js dist/init-job.js dist/validate-job.js dist/mcp/server.js",
    "start": "dist/main.js",
    "mcp": "node dist/mcp/server.js",
    "dev": "vite",
    "watch": "vite build --watch",
    "test": "vitest run --coverage",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "clean": "rm -rf dist",
    "precommit": "npm run lint && npm run test",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "focus",
    "productivity",
    "notes",
    "genai"
  ],
  "author": "Tim O'Brien <tobrien@discursive.com>",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@google/generative-ai": "^0.24.1",
    "@modelcontextprotocol/sdk": "^1.25.3",
    "@riotprompt/riotprompt": "^0.0.21",
    "@theunwalked/cardigantime": "^0.0.22",
    "@theunwalked/dreadcabinet": "^0.0.1",
    "commander": "^14.0.2",
    "dayjs": "^1.11.19",
    "dotenv": "^17.2.3",
    "glob": "^13.0.0",
    "js-yaml": "^4.1.1",
    "luxon": "^3.7.2",
    "moment-timezone": "^0.6.0",
    "openai": "^6.15.0",
    "winston": "^3.18.3",
    "zod": "^4.0.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.30.1",
    "@rollup/plugin-replace": "^6.0.3",
    "@swc/core": "^1.12.11",
    "@types/js-yaml": "^4.0.9",
    "@types/luxon": "^3.7.1",
    "@types/node": "^24.0.12",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.30.1",
    "eslint-plugin-import": "^2.32.0",
    "globals": "^16.3.0",
    "mockdate": "^3.0.5",
    "rollup-plugin-preserve-shebang": "^1.0.1",
    "rollup-plugin-visualizer": "^6.0.5",
    "typescript": "^5.8.3",
    "vite": "^7.0.4",
    "vite-plugin-node": "^7.0.0",
    "vitest": "^3.2.4"
  }
}
